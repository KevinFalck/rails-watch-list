<h1>Liste Details</h1>
<h4><%= @list.name %></h4>

<% @list.bookmarks.each do |bookmark| %>
   <h4> <%= bookmark.comment%></h4>
   <h4> <%= bookmark.movie.title%></h4>
   <h4> <%= bookmark.movie.rating%></h4>
   <h4><img src="<%= bookmark.movie.poster_url %>" width="200" height="300" alt= ""></h4>
<% end %>
<br>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list), class: "btn btn-success", style: "color: white;" %> <%= link_to "Show all lists", lists_path %>
